{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["skill", "version", "notes", "output"],
  "properties": {
    "skill": {"type": "string"},
    "version": {"type": "string"},
    "notes": {"type": "array", "items": {"type": "string"}},
    "output": {
      "type": "object",
      "required": ["file_touches", "layer", "decision"],
      "properties": {
        "file_touches": {"type": "array", "items": {"type": "string"}},
        "layer": {"type": "string"},
        "decision": {"type": "string"}
      }
    }
  }
}
