{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["skill", "version", "notes", "output"],
  "properties": {
    "skill": {"type": "string"},
    "version": {"type": "string"},
    "notes": {"type": "array", "items": {"type": "string"}},
    "output": {
      "type": "object",
      "required": ["classification", "gravity", "key_paths"],
      "properties": {
        "classification": {"type": "string"},
        "gravity": {"type": "string"},
        "key_paths": {"type": "array", "items": {"type": "string"}}
      }
    }
  }
}
