{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["name", "description", "version", "license", "metadata"],
  "properties": {
    "name": {"type": "string"},
    "description": {"type": "string"},
    "version": {"type": "string"},
    "license": {"type": "string"},
    "metadata": {
      "type": "object",
      "required": ["category", "stability"],
      "properties": {
        "category": {"type": "string"},
        "stability": {"type": "string"},
        "language": {"type": "string"},
        "tags": {"type": "array", "items": {"type": "string"}}
      }
    }
  }
}
