{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["skill", "version", "notes", "output"],
  "properties": {
    "skill": {"type": "string"},
    "version": {"type": "string"},
    "notes": {"type": "array", "items": {"type": "string"}},
    "output": {
      "type": "object",
      "required": ["decision", "reason", "artifacts"],
      "properties": {
        "decision": {"type": "string"},
        "reason": {"type": "string"},
        "artifacts": {"type": "array", "items": {"type": "string"}}
      }
    }
  }
}
